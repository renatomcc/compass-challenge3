{
  "openapi": "3.0.0",
  "info": {
    "title": "Your API Title",
    "version": "1.0.0",
    "description": "Your API Description"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/api/v1/users/sign-up": {
      "post": {
        "summary": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignUpUser"
              },
              "example": {
                "firstName": "Shakira",
                "lastName": "Isabel",
                "birthDate": "1977-02-02",
                "city": "Barranquilla",
                "country": "Col√¥mbia",
                "email": "shakira@wakawaka.com",
                "password": "hipsdontlie",
                "confirmPassword": "hipsdontlie"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User created successfully"
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "example": {
                  "type": "Validation Error",
                  "errors": [
                    {
                      "resource": "email",
                      "message": "invalid email"
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "example": {
                  "statusCode": 500,
                  "error": "Internal Server Error",
                  "message": "Something went wrong"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users/sign-in": {
      "post": {
        "summary": "Login of an existing user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignInUser"
              },
              "example": {
                "email": "shakira@wakawaka.com",
                "password": "hipsdontlie"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "example": {
                  "firstName": "John",
                  "lastName": "Doe",
                  "email": "john@example.com"
                }
              }
            }
          },
          "400": {
            "description": "Bad credentials",
            "content": {
              "application/json": {
                "example": {
                  "type": "Validation Error",
                  "errors": [
                    {
                      "resource": "email",
                      "message": "invalid email"
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "example": {
                  "statusCode": 500,
                  "error": "Internal Server Error",
                  "message": "Something went wrong"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/events": {
      "post": {
        "summary": "Create an event",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Event"
              },
              "example": {
                "description": "Show",
                "dayOfWeek": "sunday"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "example": {
                  "_id": "generated_id",
                  "description": "Show",
                  "dayOfWeek": "sunday",
                  "userId": "user_id"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "example": {
                  "type": "Validation Error",
                  "errors": [
                    {
                      "resource": "dayOfWeek",
                      "message": "\"dayOfWeek\" must be a valid day of the week"
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "example": {
                  "statusCode": 401,
                  "error": "Unauthorized",
                  "message": "Not Authenticated"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "example": {
                  "statusCode": 500,
                  "error": "Internal Server Error",
                  "message": "Something went wrong"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get events",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "dayOfWeek",
            "in": "query",
            "description": "Day of the week",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "sunday",
                "monday",
                "tuesday",
                "wednesday",
                "thursday",
                "friday",
                "saturday"
              ]
            }
          },
          {
            "name": "description",
            "in": "query",
            "description": "Description of the event",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "example": [
                  {
                    "_id": "string",
                    "description": "string",
                    "dayOfWeek": "sunday",
                    "userId": "string"
                  }
                ]
              }
            }
          },
          "400": {
            "description": "Invalid data supplied",
            "content": {
              "application/json": {
                "example": {
                  "type": "Validation Error",
                  "errors": [
                    {
                      "resource": "dayOfWeek",
                      "message": "\"dayOfWeek\" must be a valid day of the week"
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "example": {
                  "type": "AuthenticationError",
                  "errors": [
                    {
                      "resource": "token",
                      "message": "Invalid token."
                    }
                  ],
                  "statusCode": 401
                }
              }
            }
          },
          "404": {
            "description": "Event not found",
            "content": {
              "application/json": {
                "example": {
                  "type": "Not Found",
                  "errors": [
                    {
                      "resource": "dayOfWeek",
                      "message": "No events found on this day"
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "example": {
                  "statusCode": 500,
                  "error": "Internal Server Error",
                  "message": "Something went wrong"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete events by day",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "dayOfWeek",
            "in": "query",
            "description": "Day of the week",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "sunday",
                "monday",
                "tuesday",
                "wednesday",
                "thursday",
                "friday",
                "saturday"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Events deleted successfully"
          }
        }
      }
    },
    "/api/v1/events/{id}": {
      "get": {
        "summary": "Get event by ID",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Event ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Event details"
          }
        }
      },
      "delete": {
        "summary": "Delete event by ID",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Event ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Event deleted successfully"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "SignUpUser": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date"
          },
          "city": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "confirmPassword": {
            "type": "string"
          }
        }
      },
      "SignInUser": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Event": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "dayOfWeek": {
            "type": "string"
          }
        }
      }
    }
  }
}
